  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.8.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@microsoft/microsoft-graph-types": "^2.40.0",
    "applicationinsights": "^2.9.5",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "node-cache": "^5.1.2",
    "opossum": "^8.1.3",
    "p-limit": "^5.0.0",
    "p-retry": "^6.2.0",
    "sanitize-html": "^2.17.0",
