{
  "name": "phishing-agent",
  "version": "0.3.2",
  "description": "Email-triggered phishing analysis agent with automated replies",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --exclude='**/integration/**'",
    "test:integration": "vitest run integration --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "type-check": "tsc --noEmit",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "status": "curl -sf http://localhost:3000/health || echo 'Service not running'",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm test",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.8.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@microsoft/microsoft-graph-types": "^2.40.0",
    "applicationinsights": "^2.9.5",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "node-cache": "^5.1.2",
    "opossum": "^8.1.3",
    "p-limit": "^5.0.0",
    "p-retry": "^6.2.0",
    "sanitize-html": "^2.17.0",
    "winston": "^3.11.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.5.4",
    "@types/opossum": "^8.1.7",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.10.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "phishing",
    "email-analysis",
    "security",
    "automated-response"
  ],
  "author": "Security Team",
  "license": "MIT"
}
